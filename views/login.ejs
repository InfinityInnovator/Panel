<%- include('partials/header', { title: 'Login' }) %>

<form action="/login" method="POST" class="w-full max-w-sm mx-auto bg-white p-8 shadow-lg">
  <h2 class="text-2xl font-bold mb-4">Login</h2>
  <div class="mb-4">
    <label for="email" class="block mb-2">Email:</label>
    <input type="email" id="email" name="email" class="w-full p-2 border border-gray-300">
  </div>
  <div class="mb-4">
    <label for="password" class="block mb-2">Password:</label>
    <input type="password" id="password" name="password" class="w-full p-2 border border-gray-300">
  </div>
  <button type="submit" class="w-full bg-blue-500 text-white p-2">Login</button>

  <a href="/register" class="text-blue-500 hover:underline mt-4 block">Dont have an account</a>
</form>